@using FriendLetter.Models;
<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Create a Custom Postcard!</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='~/css/styles.css'>
  </head>
  <body>
    <h1>Fill in your name and your friend's name to create your custom postcard!</h1>
    <form action="/madlibsthree" method="post">
     <label for="ex">Exclamation</label>
     <input id="ex" name="ex" type="text">
     <label for="ad">Adverb</label>
     <input id="adv" name="adv" type="text">
     <label for="noun">Noun</label>
     <input id="noun" name="noun" type="text">
     <label for="adj">Adjective</label>
     <input id="adj" name="adj" type="text">
      <label for="adj2">Adjective</label>
     <input id="adj2" name="adj2" type="text">
     <label for="noun2">Noun</label>
     <input id="noun2" name="noun2" type="text">
     <label for="noun3">Noun</label>
     <input id="noun3" name="noun3" type="text">
     <button type="submit">Go!</button>
    </form>
  </body>
</html>
